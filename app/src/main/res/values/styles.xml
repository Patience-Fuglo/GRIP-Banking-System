<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="BoldTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large_18</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="BoldSubTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large_16</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
    </style>

    <style name="AppTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/colorTertiary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProfileAppTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/colorTertiary</item>
        <item name="android:textSize">@dimen/text_small_14</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableRight">@drawable/ic_pen_icon</item>
        <item name="android:layout_margin">@dimen/margin_16</item>
        <item name="android:drawablePadding">@dimen/margin_8</item>
        <item name="android:drawableTint">@color/colorTertiary</item>
    </style>

    <style name="DropDownItem" parent="BoldSubTitleStyle">
        <item name="android:drawableRight">@drawable/ic_keyboard_arrow_right</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingEnd">@dimen/margin_16</item>
        <item name="android:layout_margin">@dimen/margin_16</item>
        <item name="android:background">@drawable/rounded_white_rect</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppButtons" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large_16</item>
        <item name="android:layout_margin">@dimen/margin_8</item>
        <item name="android:padding">@dimen/margin_16</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppButtonsWithoutMargin" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large_16</item>
        <item name="android:padding">@dimen/margin_16</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/text_small_14</item>
        <!--<item name="android:paddingTop">@dimen/margin_16</item>-->
        <!--<item name="android:paddingBottom">@dimen/margin_16</item>-->
        <!--<item name="android:paddingStart">@dimen/margin_8</item>-->
        <!--<item name="android:paddingEnd">@dimen/margin_8</item>-->
        <item name="android:lines">3</item>
        <item name="android:max">3</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="RadioStyle">
        <item name="android:button">@drawable/radio_selection_selector</item>
    </style>
</resources>
